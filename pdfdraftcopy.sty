\RequirePackage{graphicx}
\RequirePackage{color}
\definecolor{draftgrey}{gray}{0.85}
\RequirePackage{eso-pic}

\newif\ifminutes@draft
\DeclareOption{draft}{
  \minutes@drafttrue
}
%\ExecuteOptions{\CurrentOption}
\ProcessOptions

%%% Indicate whether the document is a draft.
\ifminutes@draft
  \AddToShipoutPicture{%
    \AtTextCenter{%
      \makebox(0,0)[c]{\resizebox{\textwidth}{!}{%
        \rotatebox{45}{\textbf{\textsc{\textsf{\color{draftgrey}Draft}}}}
      }}
    }
